alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

case "$(uname -s)" in
	'Darwin' )
		alias pbp='pbpaste'
		alias pbc='pbcopy'
		alias o='open'
		alias ip='ifconfig #'
		;;
	'Linux' )
		alias pbp='xsel -b'
		alias pbc='xsel -bi'
		alias o='xdg-open'
		;;
esac

eval "$(hub alias -s)"
